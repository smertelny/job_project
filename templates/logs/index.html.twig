{% extends "base.html.twig" %}

{% block body %}

{% include "navbar.html.twig" %}
<style>
    table {
        border: 1px solid black;
        border-collapse: collapse;
    }
    th, td {
        border: 1px solid black;
        padding: 5px;
    }
</style>

<table>
    <tr>
        <th>IP</th>
        <th>Datetime</th>
        <th>Status Code</th>
        <th>Query</th>
    </tr>
{% for log in logs %}
    <tr>
        <td>{{ log.getUserIp }}</td>
        <td>{{ log.getDatetime|date("Y-m-d H-i-s") }}</td>
        <td>{{ log.getStatusCode }}</td>
        <td>{{ log.getQueryName }}</td>
    </tr>
{% endfor %}
</table>

Pages: 
{% for i in range(1, count) %}
    {% if i == page %}
        {{ i }}
    {% else %}
        <a href="{{ path('log_index', {'page': i}) }}">{{ i }}</a>
    {% endif %}
{% endfor %}
{% endblock body %}